    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
        //window.onload = function () {
            alert("@Html.Raw(@ViewBag.Message)");
        //};
        </script>
    }
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div id="error"></div>
        <div class="form">
            <div class="forceColor"></div>
            <div class="topbar">
                <div class="spanColor"></div>
                @Html.TextBoxFor(model => model.userName, new { @class = "input", @placeholder = "Nhập tài khoản" })
                @Html.PasswordFor(model => model.Password, new { @class = "input", @placeholder = "Nhập mật khẩu" })
            </div>
            <button class="submit" id="submit">Login</button>
        </div>
    }
    <script src="~/Assets/client/Login/js/jquery.min.js"></script>
    <script src="~/Assets/client/Login/js/index.js"></script>
</body>
</html>
