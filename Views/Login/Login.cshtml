<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login form</title>
    <link href="~/Assets/Client/Login/css/font.css" rel="stylesheet" />
    <link href="~/Assets/Client/Login/css/style.css" rel="stylesheet" />
    <link href="~/Assets/Client/Login/css/reset.css" rel="stylesheet" />
    <script src="~/Assets/Client/Login/js/modernizr.js"></script>
    <script src="~/Assets/Client/AdminLTE/jQuery/jQuery-2.2.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#submit").on('click', function (e) {
                var userName = $("#userName").val();
                if (userName.length == 0) {
                    alert("Tên đăng nhập không được để trống");
                    $("#userName").focus();
                    e.preventDefault(); // prevents default
                    return false;
                }
                    
            });
        });
    </script>
</head>


<body>
    @*<div class="form">
            <div class="forceColor"></div>
            <div class="topbar">
                <div class="spanColor"></div>
                <input type="text" id="txtUser" placeholder="Nhập tài khoản" class="input" />
                <input type="password" id="txtPass" placeholder="Nhập mật khẩu" class="input" />
                <input type="checkbox" id="chkRemember" /> <label style="color: white"> Remember me</label>
            </div>
