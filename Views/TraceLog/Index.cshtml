
@{
    ViewData["Title"] = "Truy vết";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}
@section scripts{
    <script src="~/Assets/Client/ViewModel/TraceLog/TraceLogViewModel.js"></script>
}

<div class="panel" style="overflow:hidden">
    <div id="loader" data-bind="visible: loading()" class="loader loader-center">Loading...</div>
    <div class="panel-body" style="padding-top:0px">
        <div class="box-header" style="padding-top:0px;padding-bottom:0px">
            <div class="row" style="padding-top:0px;padding-bottom:0px">
                <div class="col-xs-8" style="padding:0px!important;margin:0px!important">
                    <h4><b>Truy vết</b></h4>
                </div>
                <div class="col-xs-4" style="margin-top:5px; text-align:right;padding:0px" tabindex="3">
                    @*<button title="Import dữ liệu" data-bind="click: $root.Import" class="btn btn-info btn-xs btnImport @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("/Client/TraceLog/ImportDanhMuc") ? "" : "hidden")"><span class="glyphicon glyphicon-import"></span>&nbsp;&nbsp;Import</button>
                        <button title="Export dữ liệu" data-bind="click: $root.Export" class="btn btn-info btn-xs btnExport @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("/Client/TraceLog/ExportTraceLog") ? "" : "hidden")"><span class="glyphicon glyphicon-export"></span>&nbsp;&nbsp;Export</button>
                        <button title="Filter" class="btn btn-info btn-xs btnFilter"><span class="glyphicon glyphicon-filter"></span>&nbsp;&nbsp;Filter</button>
                        <button title="Thoát" class="btn btn-info btn-xs btnExit @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("") ? "" : "hidden")"><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;F10 - Thoát</button>*@
                    <button title="Xem" data-bind="click: $root.loadData" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;Xem</button>
                    <button title="Filter" class="btn btn-info btn-xs btnFilter"><span class="glyphicon glyphicon-filter"></span>&nbsp;&nbsp;Filter</button>
                    <button title="Thoát" class="btn btn-info btn-xs btnExit"><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;F10 - Thoát</button>
                </div>
            </div>
        </div>
        <div class="box-body" id="boxBody" style="padding-top:0px">
            <div class="row" style="padding:0px;padding:0px">
                <div class="col-xs-12">
                    <div class="col-xs-1">Tên bảng: </div>
                    <div class="col-xs-2"><div id="cbofTenBang" tabindex="4"></div></div>
                    <div class="col-xs-1">Từ ngày: </div>
                    <div class="col-xs-1-5"><input type="text" id="dtTuNgay" style="width:100%!important" /></div>
                    <div class="col-xs-1">Đến ngày: </div>
                    <div class="col-xs-1-5"><input type="text" id="dtDenNgay" style="width:100%!important" /></div>
                </div>
            </div>
                <div class="row" style="padding:0px;padding:0px">
                    <div class="col-xs-12">
                        <div class="col-xs-1">Kiểu tác động: </div>
                        <div class="col-xs-2"><div id="cbofKieuTacDong" tabindex="4"></div></div>
                        <div class="col-xs-1">Mã BN: </div>
                        <div class="col-xs-1-5"><input type="text" id="txtMaBN" style="width:100%!important" /></div>
                        <div class="col-xs-1">Mã Máy: </div>
                        <div class="col-xs-1-5"><input type="text" id="txtMaMay" style="width:100%!important" /></div>
                        <div id="cboColumn" tabindex="4" style="text-align:right"></div>
                    </div>
                    <table id="table" class="table table-responsive table-fixed table-striped table-bordered responsive-utilities scroll jambo_table table-hover" style="padding:0px!important;margin:0px!important;height:500px!important">
                        @*@{Html.RenderAction("TableHeader", "Home");}*@
                        <partial name="~/Views/Shared/_TableHeader.cshtml" />
                        <tbody id="tbody" class="table-tbody searchable table-container" style="overflow-x:hidden" data-bind="foreach: TraceLogs">
                            <tr data-bind="template :{name: $root.displayMode, data : $data}, event: {'keyup': $root.upAndDown},click: $root.selectItem, css: {'danger':$root.selectedItem() == $data},attr: {id:$data.ID}" tabindex="1"></tr>
                        </tbody>
                    </table>
                </div>
                @*@{Html.RenderAction("PagingTable", "Home");}*@
                <partial name="~/Views/Shared/_PagingTable.cshtml" />
                <div class="modal fade" id="importPopUp" role="dialog">
                    <div class="modal-dialog" style="width:800px!important">
                        @*@{Html.RenderAction("ImportView", "Home");}*@
                        <partial name="~/Views/Shared/_ImportView.cshtml" />
                    </div>
                </div>
            </div>
        </div>
</div>
