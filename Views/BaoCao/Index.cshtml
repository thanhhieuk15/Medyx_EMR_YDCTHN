
@{
    ViewData["Title"] = "Báo Cáo";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}
@section scripts{
    <script src="~/Assets/Client/ViewModel/BaoCao/BaoCaoViewModel.js"></script>
}
@{
    Medyx_EMR_BCA.Models.DBConText.UserProfileSessionData Model = ViewData["UserProfileSessionData"] as Medyx_EMR_BCA.Models.DBConText.UserProfileSessionData;
    var ListRoleSession = Model.ListRoleSession;
    var QuyenXem = ListRoleSession.Where(x => x.ActionDetailsName == "/BaoCao/Index/Modify").Count() > 0 ? "true" : "false";
    var ImportDanhMuc = ListRoleSession.Where(x => x.ActionDetailsName == "/BaoCao/Index/ImportDanhMuc").Count() > 0;
    var ExportExcel = ListRoleSession.Where(x => x.ActionDetailsName == "/BaoCao/Index/ExportExcel").Count() > 0;
}
<input id="txtQuyenXem" type="hidden" value='@QuyenXem' />
<div class="panel" style="overflow:hidden">
    <div id="loader" data-bind="visible: loading()" class="loader loader-center">Loading...</div>
    <div class="panel-body" style="padding-top:0px">
        <div class="box-header" style="padding-top:0px;padding-bottom:0px">
            <div class="row" style="padding-top:0px;padding-bottom:0px">
                <div class="col-xs-8" style="padding:0px!important;margin:0px!important">
                    <h4><b>Báo Cáo</b></h4>
                </div>
                <div class="col-xs-4" style="margin-top:5px; text-align:right;padding:0px" tabindex="3">
                    @*<button title="Import dữ liệu" data-bind="click: $root.Import" class="btn btn-info btn-xs btnImport @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("/Client/BaoCao/ImportDanhMuc") ? "" : "hidden")"><span class="glyphicon glyphicon-import"></span>&nbsp;&nbsp;Import</button>
                        <button title="Export dữ liệu" data-bind="click: $root.Export" class="btn btn-info btn-xs btnExport @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("/Client/BaoCao/ExportBaoCao") ? "" : "hidden")"><span class="glyphicon glyphicon-export"></span>&nbsp;&nbsp;Export</button>
                        <button title="Filter" class="btn btn-info btn-xs btnFilter"><span class="glyphicon glyphicon-filter"></span>&nbsp;&nbsp;Filter</button>
                        <button title="Thoát" class="btn btn-info btn-xs btnExit @(HTC.WEB.NIOEH.Core.HTCCheckRoles.CheckQuyenAction("") ? "" : "hidden")"><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;F10 - Thoát</button>*@
                    <button title="Export dữ liệu" data-bind="click: $root.Export" class="btn btn-info btn-xs btnExport @(ExportExcel ? "" : "hidden")"><span class="glyphicon glyphicon-export"></span>&nbsp;&nbsp;Export</button>
                    <button title="Thoát" class="btn btn-info btn-xs btnExit"><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;F10 - Thoát</button>
                </div>
            </div>
        </div>
        <div class="box-body" id="boxBody" style="padding-top:0px">
            <div class="row col-xs-12">
                <div class="col-xs-1"><b>Loại báo cáo:</b></div>
                <div class="col-xs-3"><div id="cboLoaiBC" tabindex="4"></div></div>
            </div>
            <div class="row col-xs-12">
                <div class="col-xs-1"><b>Từ ngày:</b></div>
                <div class="col-xs-1"><input type="text" id="dtTuNgay" style="width:100%!important" /></div>
                <div class="col-xs-1"><b>Đến ngày:</b></div>
                <div class="col-xs-1"><input type="text" id="dtDenNgay" style="width:100%!important" /></div>
                <div class="col-xs-1"><b>Khoa:</b></div>
                <div class="col-xs-5"><div id="cboKhoa" tabindex="4"></div></div>
            </div>
        </div>
    </div>
</div>
